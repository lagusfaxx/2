generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CLIENT
  PROFESSIONAL
  ADMIN
}

enum ServiceStatus {
  PENDING_APPROVAL
  ACTIVE
  PENDING_REVIEW
  FINISHED
  REJECTED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(CLIENT)
  gender    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile ProfessionalProfile?
  favorites FavoriteProfessional[]
  messages Message[]
  serviceRequests ServiceRequest[] @relation("ClientService")
  subscriptions Subscription[]
  conversations ConversationParticipant[]
}

model ProfessionalProfile {
  id          String   @id @default(uuid())
  userId      String   @unique
  displayName String
  bio         String
  isActive    Boolean  @default(true)
  categoryId  String?

  user        User     @relation(fields: [userId], references: [id])
  category    Category? @relation(fields: [categoryId], references: [id])
  gallery     ProfessionalImage[]
  ratings     RatingProfessional[]
  services    ServiceRequest[]
}

model Establishment {
  id          String   @id @default(uuid())
  name        String
  city        String
  address     String
  phone       String
  description String
  categoryId  String?

  category    Category? @relation(fields: [categoryId], references: [id])
  ratings     RatingEstablishment[]
  gallery     EstablishmentImage[]
}

model Category {
  id    String @id @default(uuid())
  name  String
  type  String

  professionals ProfessionalProfile[]
  establishments Establishment[]
}

model Conversation {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  participants ConversationParticipant[]
  messages     Message[]
}

model ConversationParticipant {
  conversationId String
  userId         String

  conversation Conversation @relation(fields: [conversationId], references: [id])
  user         User @relation(fields: [userId], references: [id])

  @@id([conversationId, userId])
}

model Message {
  id             String   @id @default(uuid())
  conversationId String
  senderId       String
  content        String
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id])
  sender       User @relation(fields: [senderId], references: [id])
}

model ServiceRequest {
  id             String        @id @default(uuid())
  clientId       String
  professionalId String
  note           String?
  status         ServiceStatus
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  client         User @relation("ClientService", fields: [clientId], references: [id])
  professionalProfile ProfessionalProfile @relation(fields: [professionalId], references: [id])
}

model RatingProfessional {
  id             String   @id @default(uuid())
  clientId       String
  professionalId String
  score          Int
  comment        String?
  createdAt      DateTime @default(now())

  professional ProfessionalProfile @relation(fields: [professionalId], references: [id])
  client       User @relation(fields: [clientId], references: [id])
}

model RatingEstablishment {
  id              String   @id @default(uuid())
  clientId        String
  establishmentId String
  score           Int
  comment         String?
  createdAt       DateTime @default(now())

  establishment Establishment @relation(fields: [establishmentId], references: [id])
  client        User @relation(fields: [clientId], references: [id])
}

model FavoriteProfessional {
  clientId       String
  professionalId String

  client       User @relation(fields: [clientId], references: [id])
  professional ProfessionalProfile @relation(fields: [professionalId], references: [id])

  @@id([clientId, professionalId])
}

model Plan {
  id        String @id @default(uuid())
  name      String
  price     Int
  features  String
  createdAt DateTime @default(now())

  subscriptions Subscription[]
}

model Subscription {
  id             String   @id @default(uuid())
  userId         String
  planId         String
  subscriptionId String
  status         String
  createdAt      DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  plan Plan @relation(fields: [planId], references: [id])
}

model AdminActionLog {
  id        String   @id @default(uuid())
  adminId   String
  action    String
  metadata  String?
  createdAt DateTime @default(now())
}

model ProfessionalImage {
  id            String @id @default(uuid())
  professionalId String
  url           String

  professional ProfessionalProfile @relation(fields: [professionalId], references: [id])
}

model EstablishmentImage {
  id            String @id @default(uuid())
  establishmentId String
  url           String

  establishment Establishment @relation(fields: [establishmentId], references: [id])
}
